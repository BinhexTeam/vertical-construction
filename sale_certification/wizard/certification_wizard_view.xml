<odoo>
    <record id="view_certification_wizard_form" model="ir.ui.view">
        <field name="name">certification.wizard.form</field>
        <field name="model">certification.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Certification">
                <group>
                    <field name="order_id" invisible="True" />
                    <field name="name" />
                    <field name="certification_type"/>
                    <field name="percentage" invisible="certification_type != 'percentage'" />
                    <field name="sale_order_line_ids" widget="many2many_checkboxes">
                        <tree>
                            <field name="name"/>
                            <field name="product_uom_qty"/>
                            <field name="certifiable_quantity"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button string="Create" type="object" name="action_create_certification" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

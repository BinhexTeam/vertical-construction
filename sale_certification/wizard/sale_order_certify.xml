<odoo>
  <record id="view_sale_order_certify_wizard_form" model="ir.ui.view">
    <field name="name">sale.order.certify.wizard.form</field>
    <field name="model">sale.order.certify.wizard</field>
    <field name="arch" type="xml">
      <form string="Certify Order">
        <group>
          <field name="sale_order_id" invisible="True" />
          <field name="certificate_id" />
          <field name="percentage" />
        </group>
        <footer>
          <button
                        string="Certify"
                        type="object"
                        name="action_apply_certification"
                        class="btn-primary"
                    />
          <button string="Cancel" class="btn-secondary" special="cancel" />
        </footer>
      </form>
    </field>
  </record>

  <record id="action_sale_order_certify_wizard" model="ir.actions.act_window">
    <field name="name">Certify Order</field>
    <field name="res_model">sale.order.certify.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>
</odoo>

<odoo>
  <record id="view_order_form_certify" model="ir.ui.view">
    <field name="name">sale.order.form.certify</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form" />
    <field name="arch" type="xml">
      <xpath expr="//header/button[1]" position="before">
        <button
          name="open_certify_wizard"
          type="object"
          string="Certificate"
          class="oe_highlight"
          invisible="state != 'sale'"
        />
      </xpath>
      <xpath expr="//field[@name='partner_id']" position="after">
         <field name="certified_info" readonly="True" />
      </xpath>
      <xpath expr="//field[@name='partner_id']" position="after">
        <field name="certifications_count" readonly="True"/>
      </xpath>
    </field>
  </record>
</odoo>
